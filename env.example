# =============================================================================
# REAL DEBRID FULL STACK CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your API keys

# Real Debrid API (REQUIRED)
REAL_DEBRID_API_KEY=your_api_key_here

# =============================================================================
# REAL DEBRID STRM CONTAINER SETTINGS
# =============================================================================

# How often to check for new content (minutes)
CYCLE_INTERVAL_MINUTES=20

# When to refresh existing .strm files (days) 
FILE_EXPIRY_DAYS=14

# API retry attempts
RETRY_503_ATTEMPTS=2
RETRY_429_ATTEMPTS=3

# =============================================================================
# MEDIA ORGANIZER CONTAINER SETTINGS
# =============================================================================

# How often to check for new files to organize (minutes)
MONITOR_INTERVAL_MINUTES=30

# Delay before organizing (to batch operations)
ORGANIZE_DELAY_SECONDS=60

# Minimum video file size to process (MB)
MIN_VIDEO_SIZE_MB=300

# Enable Japanese Adult Video detection
ENABLE_JAV_DETECTION=true

# TMDB API for better movie/show detection (OPTIONAL)
TMDB_API_KEY=your_tmdb_api_key_here

# =============================================================================
# AI CLASSIFICATION SETTINGS
# =============================================================================

# OpenAI API Key for content classification
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity API Key for content classification (fallback)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# AI confidence threshold (0.0 to 1.0, higher = more confident)
AI_CONFIDENCE_THRESHOLD=0.7

# Enable AI classification (true/false)
ENABLE_AI_CLASSIFICATION=true

# AI model to use (gpt-3.5-turbo, gpt-4, etc.)
AI_MODEL=gpt-3.5-turbo

# =============================================================================
# SHARED STACK SETTINGS
# =============================================================================

# Timezone
TZ=UTC

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Path to unorganized media folder (optional, defaults to ./Media/unorganized)
UNORGANIZED_PATH=./Media/unorganized 